{
  "manifest_version": 2,
  "name": "cora-items-extractor",
  "version": "0.1",
  "description": "Items Extractor",
  "icons": { "128": "icon_128.png" },
  "background": {
    "persistent": false,
    "scripts": ["bg.js"]
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "browser_action": {
    "default_title": "Cora Extractor",
    "default_icon": "icon_19.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "css": ["extractor.css"],
      "js": ["jquery.min.js", "contentscript.js"],
      "run_at": "document_end"
    }
  ]
}
