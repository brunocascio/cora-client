{
  "manifest_version": 1,
  "name": "cora-items-extractor",
  "version": "0.1",
  "description": "Items Extractor",
  "icons": {
    "128": "icon_128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "background",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "browser_action": {
    "default_title": "Cora Extractor",
    "default_icon": "icon_19.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "bundle.js"
      ],
      "run_at": "document_end"
    }
  ]
}